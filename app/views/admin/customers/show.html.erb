<div class = "container">
  <h2>会員詳細</h2>
  <table class = "table">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_deleted == false %>
          <span>有効</span>
        <% else %>
          <span>退会</span>
        <% end %>
      </td>
    </tr>
  </table>
  <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
  <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
</div>
