<div class = "container">
  <h2>商品新規登録</h2>
  <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <%= form_with model: [:admin,@item] do |f| %>
      <div class = "form-group">
        <p>商品画像<%= f.file_field :image, accept: "image/*" %></p>
      </div>
      <div class = "form-group">
        <p>商品名<%= f.text_field :name %></p>
      </div>
      <div class = "form-group">
        <p>商品説明<%= f.text_area :introduction %></p>
      </div>
      <div class = "form-group">
        <p>税抜価格<%= f.text_field :price %>円</p>
      </div>
      <div class = "form-group">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
