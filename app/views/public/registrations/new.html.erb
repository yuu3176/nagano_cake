<div class = "container">
  <h4>新規会員登録</h4>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field text-center py-3">
      <p>
        <%= f.label :名前 %>
        (姓)<%= f.text_field :last_name %>(名)<%= f.text_field :first_name %>
      </p>
    </div>

    <div class="field text-center py-3">
      <p>
        <%= f.label :フリガナ %>
        (セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %>
      </p>
    </div>

    <div class="field text-center py-3">
      <p>
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </p>
    </div>

    <div class="field text-center py-3">
      <p>
        郵便番号(ハイフンなし)
        <%= f.text_field :postal_code %>
      </p>
    </div>

    <div class="field text-center py-3">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div>

    <div class="field text-center py-3">
      <p>
        電話番号(ハイフンなし)
        <%= f.text_field :telephone_number %>
      </p>
    </div>

    <div class="field text-center py-3">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class = "field text-center py-3">
      <p>
        パスワード(確認用)
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </p>
    </div>

    <div class="actions text-center py-3">
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  <% end %>

  <h2>既に登録済みの方</h2>
  <p class = "text-center py-3"><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

</div>
