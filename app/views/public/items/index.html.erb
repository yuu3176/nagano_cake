<div class = "container">
  <h2>商品一覧(全<%= @items.count %>件)</h2>
  <div class = "album py-5">
    <div class = "container">
      <div class = "row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @items.each do |item| %>
          <div class = "card shadow-sm text_center">
            <%= link_to public_item_path(item.id) do %>
              <%= image_tag item.get_image %>
            <% end %>
            <div class = "card-body">
              <%= item.name %>
              <p>¥<%= item.price %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

