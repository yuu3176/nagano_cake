<div class = "container">
  <h2>会員情報編集</h2>
  <%= form_with model: @customer, url: public_customer_path do |f| %>
    <table class = "table">
      <tr>
        <td>氏名</td>
        <td>
          <%= f.text_field :last_name, autofocus: true, id:"inputLastName", placeholder:"姓" %>
          <%= f.text_field :first_name, autofocus: true, id:"inputFirstName", placeholder:"名" %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= f.text_field :last_name_kana, autofocus: true, id:"inputLastNameKana", placeholder:"セイ" %>
          <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirstNameKana", placeholder:"メイ" %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code, autofocus: true, id:"inputPostalCode", placeholder:"郵便番号" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder:"電話番号" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %></td>
      </tr>
    </table>
    <div class = "text-center">
      <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      <%= link_to "退会する", public_customer_confirm_withdraw_path(@customer.id), class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
