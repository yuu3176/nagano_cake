<div class = "container">
  <h2>注文履歴一覧</h2>
  <table class="table table-bordered border-dark">
    <therd>
      <tr>
        <th class="table-secondary col-2">注文日</th>
        <th class="table-secondary col-3">配送先</th>
        <th class="table-secondary col-3">注文商品</th>
        <th class="table-secondary col-1">支払金額</th>
        <th class="table-secondary col-2">注文詳細</th>
      </tr>
    </therd>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="col-2"><%= order.created_at. strftime('%Y/%m/%d') %></td>
          <td class="col-3">
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td class>
          <td class="col-3">
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
            <% end %>
          </td>
          <td class="col-2"><%= order.total_payment %>円</td>
          <td class="col-2"><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
